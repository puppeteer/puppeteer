{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "noEmitOnError": true,
    "rootDir": "src/",
    "outDir": "lib/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node"],
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/files/**/*"]
}
